{
  "compilerOptions": {
      "baseUrl": "src",
      "declaration": true,
      "target": "es5",
      "module": "commonjs",
      "outDir": "./lib",
      "strict": true,
      "esModuleInterop": true,
      "strictPropertyInitialization": false,
      "noUnusedLocals": false,
      "paths": {
        "@app/*": ["*"],
        "@instore/*": ["*"],
        "@mocks-instore/*": ["../tests/unit_tests/__mocks__/*"]
      },
      "rootDir": "."
  },
  "include": [
		"src/**/*",
		"tests/**/*"
  ],
  "exclude": [
      "node_modules",
      "**/*.spec..ts"
  ]
}